<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ToDoJo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
             Width="800" Height="550"
             x:Class="ToDoJo.Views.SamuraiView"
             x:DataType="vm:SamuraiViewModel">

	<Design.DataContext>
		<vm:SamuraiViewModel/>
	</Design.DataContext>

	<SplitView IsPaneOpen="{Binding IsPaneOpen}"
               OpenPaneLength="200"
               CompactPaneLength="50"
               DisplayMode="CompactInline"
               PaneBackground="#0F1D28"
               Background="#0F1D28">

		<SplitView.Pane>
			<Grid RowDefinitions="*,100">
				<StackPanel Grid.Row="0" Spacing="5" Margin="5">
					<Button Command="{Binding OpenPaneCommand}"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0">
						<Image Source="/Assets/SplitView.png" Height="16" Width="16"/>
					</Button>

					<Button HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="Task"
                            Background="#182F3A"
                            Foreground="White"
                            Width="150"
                            Margin="20"
                            Command="{Binding NavigateToTaskCommand}"/>

					<Button HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="Samurai"
                            Background="#182F3A"
                            Foreground="White"
                            Width="150"
                            Margin="20"
                            Command="{Binding NavigateToSamuraiCommand}"/>

					<Button HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="Profile"
                            Background="#182F3A"
                            Foreground="White"
                            Width="150"
                            Margin="20"
                            Command="{Binding NavigateToProfileCommand}"/>
				</StackPanel>

				<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
					<Button HorizontalAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0">
						<Image Source="/Assets/settings.png"
                               Height="16" Width="16"/>
					</Button>
					<Button HorizontalAlignment="Left"
                            HorizontalContentAlignment="Center"
                            Content="Log Out"
                            Width="120"
                            Background="#355963"
                            Foreground="White"
                            Command="{Binding LogOutCommand}"/>
				</StackPanel>
			</Grid>
		</SplitView.Pane>

		<SplitView.Content>
			<Grid Background="#182F3A">
				<!-- Центральный контент -->
				<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="40">

					<!-- Анимированный самурай через ViewModel -->
					<Border Width="200" Height="200"
                            HorizontalAlignment="Center"
                            Background="Transparent">
						<Image Source="{Binding CurrentFrame}"
                               Width="180" Height="180"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapInterpolationMode="None"/>
					</Border>

					<!-- Coming Soon секция -->
					<StackPanel HorizontalAlignment="Center" Spacing="20">

						<!-- Анимированный текст загрузки -->
						<TextBlock Text="{Binding LoadingText}"
                                  Foreground="LightGray"
                                  FontSize="14"
                                  HorizontalAlignment="Center"
                                  FontWeight="SemiBold"/>

						<!-- Дополнительный текст -->
						<TextBlock Text="Your samurai is preparing for battle..."
                                  Foreground="LightGray"
                                  FontSize="12"
                                  HorizontalAlignment="Center"
                                  FontStyle="Italic"/>
					</StackPanel>

				</StackPanel>
			</Grid>
		</SplitView.Content>
	</SplitView>
</UserControl>