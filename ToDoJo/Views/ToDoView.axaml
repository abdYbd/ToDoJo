<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ToDoJo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
             Width="800" Height="550"
             x:Class="ToDoJo.Views.ToDoView"
             x:DataType="vm:ToDoViewModel">

	<Design.DataContext>
		<vm:ToDoViewModel/>
	</Design.DataContext>

	<SplitView IsPaneOpen="{Binding IsPaneOpen}"
               OpenPaneLength="200"
               CompactPaneLength="50"
               DisplayMode="CompactInline"
               PaneBackground="#0F1D28"
               Background="#0F1D28">

		<SplitView.Pane>
			<Grid RowDefinitions="*,100">
				<StackPanel Grid.Row="0" Spacing="5" Margin="5">
					<Button Command="{Binding OpenPaneCommand}"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0">
						<Image Source="/Assets/SplitView.png" Height="16" Width="16"/>
					</Button>

					<Button HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="Task"
                            Background="#182F3A"
                            Foreground="White"
                            Width="150"
                            Margin="20"
                            Command="{Binding NavigateToTaskCommand}"/>

					<Button HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="Samurai"
                            Background="#182F3A"
                            Foreground="White"
                            Width="150"
                            Margin="20"
                            Command="{Binding NavigateToSamuraiCommand}"/>

					<Button HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="Profile"
                            Background="#182F3A"
                            Foreground="White"
                            Width="150"
                            Margin="20"
                            Command="{Binding NavigateToProfileCommand}"/>
				</StackPanel>

				<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
					<Button HorizontalAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0">
						<Image Source="/Assets/settings.png"
                               Height="16" Width="16"/>
					</Button>
					<Button HorizontalAlignment="Left"
                            HorizontalContentAlignment="Center"
                            Content="Log Out"
                            Width="120"
                            Background="#355963"
                            Foreground="White"
                            Command="{Binding LogOutCommand}"/>
				</StackPanel>
			</Grid>
		</SplitView.Pane>

		<SplitView.Content>
			<Grid>
				<Border CornerRadius="10,0,0,10" Background="#182F3A" />

				<Grid RowDefinitions="Auto,Auto,*,Auto" Margin="10">
					<!-- Заголовок -->
					<TextBlock Grid.Row="0"
                               Text="Your Tasks"
                               Margin="20,15"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"/>

					<!-- Счетчики задач -->
					<StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="20" Margin="20,0,20,10">
						<TextBlock Text="{Binding CompleteTask, StringFormat='Completed: {0}'}"
                                   Foreground="#4CAF50"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
						<TextBlock Text="{Binding NoCompleteTask, StringFormat='Pending: {0}'}"
                                   Foreground="#FF9800"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
					</StackPanel>

					<!-- Список задач -->
					<ScrollViewer Grid.Row="2"
                                  Margin="10"
                                  VerticalScrollBarVisibility="Auto">
						<ItemsControl ItemsSource="{Binding TodoTask}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Border Background="#2A3A45"
                                            Margin="0,5"
                                            Padding="15"
                                            CornerRadius="8"
                                            BorderThickness="1"
                                            BorderBrush="#355963">
										<Grid ColumnDefinitions="*,Auto,Auto"
                                              VerticalAlignment="Center">
											<!-- Описание задачи и дата -->
											<StackPanel Grid.Column="0">
												<TextBlock Text="{Binding DescTask}"
                                                           Foreground="White"
                                                           FontSize="14"
                                                           TextWrapping="Wrap"/>
												<TextBlock Text="{Binding Deadline, StringFormat='Due: {0:dd.MM.yyyy HH:mm}'}"
                                                           Foreground="LightGray"
                                                           FontSize="10"
                                                           Margin="0,5,0,0"/>
											</StackPanel>

											<!-- Кнопка выполнения -->
											<Button Grid.Column="1"
                                                    Content="✓"
                                                    ToolTip.Tip="Complete task"
                                                    Foreground="#4CAF50"
                                                    Background="Transparent"
                                                    BorderThickness="1"
                                                    BorderBrush="#4CAF50"
                                                    Command="{Binding $parent[ItemsControl].DataContext.CompleteTaskCommand}"
                                                    CommandParameter="{Binding}"
                                                    Width="35"
                                                    Height="35"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Margin="0,0,10,0"
                                                    CornerRadius="5"/>

											<!-- Кнопка удаления -->
											<Button Grid.Column="2"
                                                    Content="🗑️"
                                                    ToolTip.Tip="Delete task"
                                                    Foreground="#FF5252"
                                                    Background="Transparent"
                                                    BorderThickness="1"
                                                    BorderBrush="#FF5252"
                                                    Command="{Binding $parent[ItemsControl].DataContext.DeleteTaskCommand}"
                                                    CommandParameter="{Binding}"
                                                    Width="35"
                                                    Height="35"
                                                    FontSize="14"
                                                    CornerRadius="5"/>
										</Grid>
									</Border>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
					</ScrollViewer>

					<!-- Панель добавления новой задачи -->
					<Border Grid.Row="3"
                            Background="#2A3A45"
                            CornerRadius="8"
                            Margin="10"
                            Padding="15">
						<StackPanel Orientation="Vertical" Spacing="10">
							<!-- Поля ввода даты и времени -->
							<StackPanel Orientation="Horizontal" Spacing="15">
								<StackPanel Spacing="5">
									<TextBlock Text="Due Date:"
                                               Foreground="LightGray"
                                               FontSize="12"/>
									<CalendarDatePicker SelectedDate="{Binding DeadlineDate, Mode=TwoWay}"
                                                        Background="#1A2A35"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="10"
                                                        Width="150"/>
								</StackPanel>

								<StackPanel Spacing="5">
									<TextBlock Text="Due Time:"
                                               Foreground="LightGray"
                                               FontSize="12"/>
									<TimePicker SelectedTime="{Binding DeadlineTime, Mode=TwoWay}"
                                                Background="#1A2A35"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="10"
                                                Width="120"/>
								</StackPanel>

								<Button Content="Clear Date/Time"
                                        Command="{Binding ClearDateTimeCommand}"
                                        Background="Transparent"
                                        Foreground="#888"
                                        BorderThickness="1"
                                        BorderBrush="#555"
                                        Padding="10,5"
                                        Margin="20,0,0,0"
                                        VerticalAlignment="Bottom"
                                        Height="30"/>
							</StackPanel>

							<!-- Поле ввода задачи и кнопка добавления -->
							<StackPanel Orientation="Horizontal" Spacing="10">
								<TextBox Watermark="Enter new task description..."
                                         Text="{Binding NewTaskContent}"
                                         Width="400"
                                         Background="#1A2A35"
                                         Foreground="White"
                                         BorderThickness="0"
                                         Padding="15"
                                         CornerRadius="5">
									<TextBox.KeyBindings>
										<KeyBinding Command="{Binding AddTaskCommand}" Gesture="Enter"/>
									</TextBox.KeyBindings>
								</TextBox>

								<Button Command="{Binding AddTaskCommand}"
                                        Content="Add Task"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="20,12"
                                        CornerRadius="5"
                                        FontWeight="SemiBold"/>
							</StackPanel>
						</StackPanel>
					</Border>
				</Grid>
			</Grid>
		</SplitView.Content>
	</SplitView>
</UserControl>